cx = camera_get_view_x(view_camera[0]);
cy = camera_get_view_y(view_camera[0]);

x = cx +xDifference;
y = cy + yDifference;

if(keyboard_check_pressed(vk_escape)) {
	if(global.options_shown) {
		global.options_shown = false;
		visible = false;
	} else {
		global.options_shown = true;
		visible = true;
	}
}
